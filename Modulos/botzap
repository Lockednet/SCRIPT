#!/bin/bash
    clear
    figlet "BOT DE VENDAS" | lolcat
    echo -e ""
    echo -e "\033[01;31m\033[0m"
    echo -e "\033[1;37m⚠️ DIGITE 00 USE O COMANDO 👉 \033[1;36m nvm install 16  👈\033[1;37m ANTES DE USAR O BOT️, É EXTREMAMENTE IMPORTANTE ⚠️⚠️⚠️⚠️\033[0m"
    echo -e ""
    echo -e "\033[01;31m\033[1;31m\033[1;34m[\033[1;37m01\033[1;34m]\033[1;37m ➤  \033[1;37mACESSAR BOT\033[0m"
    echo -e "\033[01;31m\033[1;31m\033[1;34m[\033[1;37m00\033[1;34m]\033[1;37m ➤  \033[1;31m SAIR  \033[0m"
    echo -e "\033[01;31m\033[0m"
    echo -e "★★★★★★★★★★★★★★★★★★★★★★★★★★★★★★" | lolcat
			tput civis
			echo -ne "\033[1;31m➤ \033[1;32mESCOLHA OPÇÃO DESEJADA\033[1;33m\033[1;31m\033[1;37m : ";
	read x
	tput cnorm
	clear
	case $x in
	9 | 09)
	baixarbot
	;;
	2 | 02)
	atualizarbot
    ;;
	3 | 03)
	instalardependencias
	;;
	4 | 04)
	finalizar
	;;
	1 | 01)
	terminus
    ;;
    0|00)
    echo -e "\033[1;31mSaindo...\033[0m"
    sleep 2
    clear
    exit;
    ;;
    *)
    echo -e "\n\033[1;31mOpcao invalida !\033[0m"
    sleep 2
esac
}
#!/bin/bash
    clear
    figlet "BOT DE VENDAS" | lolcat
    echo -e ""
    echo -e "\033[01;31m\033[0m"
    echo -e "\033[01;31m\033[1;31m\033[1;34m[\033[1;37m01\033[1;34m]\033[1;37m ➤  \033[1;37mINSTALAR BOT \033[0m"
	echo -e "\033[01;31m\033[1;31m\033[1;34m[\033[1;37m02\033[1;34m]\033[1;37m ➤  \033[1;37mATUALIZAR BOT \033[0m"
	echo -e "\033[01;31m\033[1;31m\033[1;34m[\033[1;37m03\033[1;34m]\033[1;37m ➤  \033[1;37mACESSAR BOT \033[0m"
    echo -e "\033[01;31m\033[1;31m\033[1;34m[\033[1;37m00\033[1;34m]\033[1;37m ➤  \033[1;31m SAIR  \033[0m"
    echo -e "\033[01;31m\033[0m"
    echo -e "★★★★★★★★★★★★★★★★★★★★★★★★★★★★★★" | lolcat
			tput civis
			echo -ne "\033[1;31m➤ \033[1;32mESCOLHA OPÇÃO DESEJADA\033[1;33m\033[1;31m\033[1;37m : ";
			read x
			tput cnorm
			clear
			case $x in
			1 | 01)
			baixarbot
			;;
			2 | 02)
			atualizarbot
			;;
			3 | 03)
			terminus
            ;;
			0 | 00)
			clear
			menu
			;;
			*)
			echo -e "\033[1;31mOpcao invalida !\033[0m"
			sleep 2
			;;
			esac
		done
	}
	fun_conexao
}
